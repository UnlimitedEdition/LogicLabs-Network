---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import PageTitle from '../components/PageTitle.astro'; // Added PageTitle import
import Contact from '../components/Contact.astro';
import Footer from '../components/Footer.astro';

// Define page-specific SEO data if needed
const pageTitleSeo = "Kontakt | LogicLabs Network"; // Renamed for clarity
const pageDescription = "Kontaktirajte nas putem forme ili pronađite naše kontakt informacije.";
const displayTitle = "Kontaktirajte Nas"; // Added display title
import heroImage from '/public/images/hero-background.jpg'; // Import background image
const base = import.meta.env.BASE_URL; // Add base URL variable

// Define style with base URL but without the overlay gradient
const mainStyle = `background-image: url('${base}${heroImage.src.startsWith('/') ? heroImage.src : '/' + heroImage.src}'); background-attachment: fixed; background-size: cover; background-position: center;`;
---

<Layout title={pageTitleSeo} description={pageDescription}>
  <Header />
  {/* Added PageTitle component - Removed breadcrumbs */}
  <PageTitle title={displayTitle} subtitle={pageDescription} /> {/* Removed breadcrumbs, added subtitle */}
  {/* Apply background using proper inline styling with base path */}
  {/* Removed padding from main, added pt-0 to avoid double padding with PageTitle */}
  <main class="relative pt-0 pb-12 bg-cover bg-center bg-fixed text-white" style={mainStyle}>
    {/* Contact component now sits directly inside main without extra padding */}
    <Contact /> 
  </main>
  <Footer />
</Layout>
