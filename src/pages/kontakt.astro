---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import PageTitle from '../components/PageTitle.astro';
import Contact from '../components/Contact.astro';
import Footer from '../components/Footer.astro';

// Define page-specific SEO data if needed
const pageTitleSeo = "Kontakt | LogicLabs Network";
const pageDescription = "Kontaktirajte nas putem forme ili pronađite naše kontakt informacije.";
const displayTitle = "Kontaktirajte Nas";
const base = import.meta.env.BASE_URL || ''; // Dodajemo fallback vrednost

// Поправка путање до позадинске слике
const heroImagePath = '/images/hero-background.jpg'; 
const mainStyle = {
  backgroundImage: `url(${heroImagePath})`, // Уклањам base префикс
  backgroundAttachment: 'fixed',
  backgroundSize: 'cover',
  backgroundPosition: 'center'
};
---

<Layout title={pageTitleSeo} description={pageDescription}>
  <Header />
  <!-- Added PageTitle component -->
  <PageTitle title={displayTitle} subtitle={pageDescription} />
  <!-- Apply background using proper inline styling with base path -->
  <main class="relative pt-0 pb-12 bg-transparent text-white" style={mainStyle}>
    <!-- Contact component now sits directly inside main without extra padding -->
    <Contact /> 
  </main>
  <Footer />
</Layout>
