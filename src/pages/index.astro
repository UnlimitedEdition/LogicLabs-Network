const featuredProjects = [ // Copied from Portfolio.astro
  {
    id: 'inovatech-solutions',
    title: 'Korporativni Sajt "Inovatech Solutions"',
    description: 'Moderan, responzivan sajt za fiktivnu tehnološku kompaniju...', // Shortened desc
    imageUrl: projectImage1.src, // Koristi importovanu sliku
    liveUrl: '/portfolio/inovatech-solutions', 
  },
  {
    id: 'crafty-corner',
    title: 'E-commerce Platforma "Crafty Corner"',
    description: 'Fiktivna online prodavnica za ručno rađene proizvode...', // Shortened desc
    imageUrl: projectImage2.src, // Koristi importovanu sliku
    liveUrl: '/portfolio/crafty-corner', 
  },
  {
    id: 'bookitnow',
    title: 'Web Aplikacija za Rezervacije "BookItNow"',
    description: 'Fiktivni sistem za online zakazivanje termina...', // Shortened desc
    imageUrl: projectImage3.src, // Koristi importovanu sliku
    liveUrl: '/portfolio/bookitnow', 
  },
];

---

<Layout>
  <Header />
  <main>
    <Hero /> {/* Removed isHomepage prop as it's no longer needed */}
    
    {/* Featured Services Section */}
    <section class="py-16 bg-gray-50"> {/* Light background for contrast */}
      <div class="container mx-auto px-6 text-center">
        <h2 class="text-3xl font-bold text-gray-800 mb-8">Naše Ključne Usluge</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
          {featuredServices.map(service => (
            <div class="bg-white p-8 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300 text-center"> 
              {/* Restored SVG injection */}
              <div set:html={service.icon}></div> 
              <h3 class="text-xl font-semibold text-gray-700 mb-3">{service.title}</h3>
              <p class="text-gray-600 mb-4">{service.description}</p>
              <a href={service.url} class="text-blue-600 hover:text-blue-800 font-medium">Saznaj više &rarr;</a>
            </div>
          ))}
        </div>
        <div class="mt-12">
           <a href="/usluge" class="bg-blue-600 text-white px-6 py-3 rounded-full font-semibold hover:bg-blue-700 transition-colors duration-300">
             Pogledajte Sve Usluge
           </a>
        </div>
      </div>
    </section>

    {/* Featured Projects Section */}
    <section class="py-16"> {/* Default background */}
      <div class="container mx-auto px-6 text-center">
        <h2 class="text-3xl font-bold text-gray-800 mb-8">Istaknuti Projekti</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
           {featuredProjects.map((project, index) => (
            <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300" data-aos="fade-up" data-aos-delay={index * 100}>
              {/* Koristi importovanu sliku */}
              <img src={project.imageUrl} alt={project.title} class="w-full h-48 object-cover"/> 
              <div class="p-6">
                <h3 class="text-lg font-semibold text-gray-800 mb-2">{project.title}</h3>
                <p class="text-gray-600 text-sm mb-4">{project.description}</p>
                <a href={project.liveUrl} class="text-blue-600 hover:text-blue-800 text-sm font-medium">
                  Pogledaj Detalje &rarr;
                </a>
              </div>
            </div>
          ))}
        </div>
         <div class="mt-12">
           <a href="/portfolio" class="bg-gray-700 text-white px-6 py-3 rounded-full font-semibold hover:bg-gray-800 transition-colors duration-300">
             Pogledajte Ceo Portfolio
           </a>
        </div>
      </div>
    </section>

    {/* Call to Action Section */}
    <section class="py-20 bg-gradient-to-r from-blue-600 to-indigo-700 text-white">
      <div class="container mx-auto px-6 text-center">
        <h2 class="text-3xl font-bold mb-4">Spremni da Započnemo Vaš Projekat?</h2>
        <p class="text-lg mb-8 max-w-2xl mx-auto">Kontaktirajte nas danas da razgovaramo o Vašim idejama i kako možemo pomoći da ih ostvarite.</p>
        <a href="/kontakt" class="bg-white text-blue-700 px-8 py-3 rounded-full font-bold text-lg hover:bg-gray-200 transition-colors duration-300">
          Zatražite Ponudu
        </a>
      </div>
    </section>

  </main>
  <Footer />
</Layout>
