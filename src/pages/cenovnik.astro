---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const pageTitle = "Cenovnik | Moj Sajt";
const pageDescription = "Pregled cena naših usluga.";
---

<Layout title={pageTitle} description={pageDescription}>
  <Header />
  <main class="container mx-auto px-6 py-12 min-h-[calc(100vh-200px)]"> {/* Added min-height */}
    <h1 class="text-4xl font-bold text-gray-800 dark:text-white mb-8 text-center" data-aos="fade-up">Cenovnik</h1>

    <div class="bg-white dark:bg-gray-800 p-8 rounded-lg shadow-md transition-colors duration-300 text-center" data-aos="fade-up" data-aos-delay="100">
      <p class="text-gray-600 dark:text-gray-300 text-lg">
        Detaljan cenovnik je u pripremi. Molimo Vas da nas <a href="/kontakt" class="text-primary hover:underline">kontaktirate</a> za informacije o cenama i prilagođenu ponudu.
      </p>
    </div>

  </main>
  <Footer />
</Layout>
