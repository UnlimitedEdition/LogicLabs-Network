---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import PageTitle from '../components/PageTitle.astro';

const pageTitle = "Cenovnik | LogicLabs Network";
const pageDescription = "Pregled cena naših usluga.";
const displayTitle = "Cenovnik";
const base = import.meta.env.BASE_URL || ''; // Dodajemo fallback vrednost

const mainStyle = undefined; // Uklanjam inline stilove za pozadinsku sliku
---

<Layout title={pageTitle} description={pageDescription}>
  <Header />
  <PageTitle title={displayTitle} subtitle="Informacije o cenama naših usluga" />
  <main class="relative bg-cover bg-center bg-fixed text-white min-h-[calc(100vh-200px)]"> <!-- Koristim Tailwind klase -->
    <div class="container mx-auto px-6 py-12">
      <div class="bg-transparent backdrop-blur-sm p-8 rounded-lg shadow-md transition-colors duration-300 text-center" data-aos="fade-up" data-aos-delay="100">
        <p class="text-gray-200 text-lg">
          Detaljan cenovnik je u pripremi. Molimo Vas da nas <a href={base + "/kontakt"} class="text-blue-300 hover:underline">kontaktirate</a> za informacije o cenama i prilagođenu ponudu.
        </p>
      </div>
    </div>
  </main>
  <Footer />
</Layout>
