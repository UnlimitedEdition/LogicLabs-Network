---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import PageTitle from '../components/PageTitle.astro';
import PortfolioGrid from '../components/Portfolio.astro'; // Renamed import

const pageTitleSeo = "Portfolio | LogicLabs Network";
const pageDescription = "Pregled naših radova i projekata u oblastima web razvoja, dizajna i programiranja.";
const displayTitle = "Naš Portfolio";
const base = import.meta.env.BASE_URL || ''; // Add base URL variable with fallback
---

<Layout title={pageTitleSeo} description={pageDescription}>
  <Header />
  <PageTitle title={displayTitle} subtitle="Pogledajte neke od naših uspešno realizovanih projekata." />
  
  <!-- Main content area with the portfolio grid -->
  <main class="relative bg-transparent text-white">
    <!-- Portfolio component already has padding, so no extra padding needed here -->
    <PortfolioGrid />
  </main>

  <Footer />
</Layout>
