---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import AboutUs from '../components/AboutUs.astro';
import PageTitle from '../components/PageTitle.astro';

// Define page-specific SEO data if needed
const pageTitleSeo = "O Nama | LogicLabs Network";
const pageDescription = "Upoznajte naš tim i saznajte više o našoj misiji i viziji.";
const displayTitle = "O Nama";
const base = import.meta.env.BASE_URL || ''; // Dodajemo fallback vrednost

// Поправка путање до позадинске слике
const heroImagePath = '/images/hero-background.jpg'; 
const mainStyle = {
  backgroundImage: `url(${heroImagePath})`, // Уклањам base префикс
  backgroundAttachment: 'fixed',
  backgroundSize: 'cover',
  backgroundPosition: 'center'
};
---

<Layout title={pageTitleSeo} description={pageDescription}>
  <Header />
  <!-- Re-add PageTitle component call -->
  <PageTitle title={displayTitle} />
  <!-- Apply background using proper inline styling with base path -->
  <main class="relative bg-transparent text-white" style={mainStyle}>
    <div class="relative z-10 container mx-auto px-6 py-12">
       <AboutUs />
    </div>
  </main>
  <Footer />
</Layout>
