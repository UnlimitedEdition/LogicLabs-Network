---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import AboutUs from '../components/AboutUs.astro';
import PageTitle from '../components/PageTitle.astro'; // Re-import PageTitle
import heroImage from '/public/images/hero-background.jpg'; // Import background image

// Define page-specific SEO data if needed
const pageTitleSeo = "O Nama | LogicLabs Network"; // Renamed for clarity
const pageDescription = "Upoznajte naš tim i saznajte više o našoj misiji i viziji.";
const displayTitle = "O Nama"; // Re-add displayTitle variable

// Define style as a variable
const mainStyle = `background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('${heroImage.src}'); background-attachment: fixed; background-size: cover; background-position: center;`;
---

<Layout title={pageTitleSeo} description={pageDescription}>
  <Header />
  {/* Re-add PageTitle component call */}
  <PageTitle title={displayTitle} />
  {/* Apply background to main using the style variable */}
  <main class="text-white" style={mainStyle}>
    <div class="container mx-auto px-6 py-12"> {/* Removed bg-white */}
       <AboutUs />
    </div>
  </main>
  <Footer />
</Layout>
