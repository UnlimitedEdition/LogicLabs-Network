---
import '../styles/global.css';

// Define props for the layout
interface Props {
	title?: string;
	description?: string;
}

// Set default values if props are not provided
const {
	title = "LogicLabs Network - Izrada Modernih Web Sajtova", // Updated Default title
	description = "Profesionalna izrada web sajtova, web dizajn i programiranje. Nudimo brza, responzivna i SEO optimizovana re≈°enja." // Default description
} = Astro.props;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		{/* --- SEO Meta Tags (using props) --- */}
		<title>{title}</title>
		<meta name="description" content={description} />
		{/* Updated keywords */}
		<meta name="keywords" content="izrada sajtova, web dizajn, programiranje, LogicLabs Network, web development, Astro, Tailwind CSS, Beograd, Srbija" />

		{/* --- Open Graph Meta Tags (using props) --- */}
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:type" content="website" />
		<meta property="og:url" content={Astro.url} />
		<meta property="og:image" content={new URL('/images/hero-background.jpg', Astro.url).href} />
		<meta property="og:image:alt" content="Moderan web dizajn i razvoj" />

		{/* Google Font Import (Inter) - Added weight 800 */}
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">

		{/* AOS CSS Import */}
		<link rel="stylesheet" href="/node_modules/aos/dist/aos.css" />
	</head>
	
	<body> {/* Removed background styling from body */}
		<slot />

		{/* AOS JS Import and Initialization */}
		<script is:inline src="/node_modules/aos/dist/aos.js"></script>
		<script is:inline>
		  AOS.init({
		    duration: 800, // Animation duration in ms
		    once: true, // Whether animation should happen only once - while scrolling down
		  });
		</script>
		{/* Removed Theme Toggle Script */}
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
