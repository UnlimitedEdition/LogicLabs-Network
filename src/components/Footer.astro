<footer class="bg-gradient-to-r from-purple-900 to-indigo-600 text-gray-300 pt-12 pb-8">
  <div class="container mx-auto px-6">
    {/* Top section: Logo and Navigation - Changed justify-between to justify-around */}
    <div class="flex flex-wrap justify-around items-start mb-8"> {/* Changed justify-between to justify-around */}
      {/* Logo and Slogan */}
      <div class="w-full md:w-1/4 mb-6 md:mb-0">
        <a href="/" aria-label="LogicLabs Network Početna" class="text-white inline-block hover:opacity-80 hover:scale-110 transition-all duration-300 ease-in-out">
          <img src="/logo.svg" alt="LogicLabs Network Logo" class="h-8 w-auto inline-block">
        </a>
        <p class="mt-2 text-sm">Kreiranje modernih web rešenja.</p>
      </div>

      {/* Navigation with Dropdowns - Centered */}
      <nav class="w-full md:w-auto mb-6 md:mb-0">
        <ul class="flex flex-wrap justify-center space-x-4 md:space-x-6"> {/* Keep justify-center */}
          {navItems.map((item, index) => ( // Added index here
            <li class="relative group py-2"> {/* Removed pb-4 */}
              <a href={item.href} class="text-gray-300 hover:text-white transition-colors duration-200 flex items-center">
                {item.name}
                {item.sublinks.length > 0 && (
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1 transition-transform duration-200 group-hover:rotate-180" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                  </svg>
                )}
              </a>
              {/* Dropdown Menu - bottom-full, added pseudo-element via style tag */}
              {item.sublinks.length > 0 && (
                <div data-dropdown-menu class={`absolute bottom-full ${index >= navItems.length - 2 ? 'right-0' : 'left-0'} mb-1 ${item.columns === 2 ? 'w-96' : 'w-56'} z-20 hidden group-hover:block`}> {/* Added data attribute */}
                  {/* Inner div for background and styling */}
                  <div class={`bg-indigo-700 rounded-md shadow-lg py-1 ${item.columns === 2 ? 'grid grid-cols-2 gap-x-4' : ''}`}>
                    {item.sublinks.map((sublink, subIndex) => ( // Changed inner loop index to subIndex
                      // Add column break logic for 2-column layout
                      <a href={sublink.href} class={`block px-4 py-2 text-sm text-gray-200 hover:bg-indigo-600 hover:text-white ${item.columns === 2 && subIndex === 0 ? 'col-start-1' : ''} ${item.columns === 2 && subIndex === Math.ceil(item.sublinks.length / 2) ? 'col-start-2' : ''}`}>
                        {sublink.name}
                      </a>
                    ))}
                  </div>
                </div>
              )}
            </li>
          ))}
        </ul>
      </nav>
    </div>

    {/* Bottom section: Copyright and Social Links */}
    <div class="mt-8 border-t border-gray-700 pt-8 flex flex-wrap justify-between items-center">
      <p class="text-sm text-center md:text-left w-full md:w-auto mb-4 md:mb-0">
        &copy; {currentYear} LogicLabs Network. Sva prava zadržana.
      </p>
      <div class="flex justify-center md:justify-end space-x-4 w-full md:w-auto">
        {socialLinks.map((link) => (
           <a href={link.href} target="_blank" rel="noopener noreferrer" aria-label={link.label} class="text-gray-400 hover:text-white hover:scale-110 transition-all duration-300">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path d={link.iconPath}/>
            </svg>
          </a>
        ))}
      </div>
    </div>
     <div class="mt-4 text-center text-xs text-gray-500">
       <p>Powered by Astro & Tailwind CSS</p>
    </div>
  </div>
</footer>

<style>
  /* Add a pseudo-element to bridge the gap for hover */
  [data-dropdown-menu]::before {
    content: '';
    position: absolute;
    bottom: -0.5rem; /* Position below the menu */
    left: 0;
    right: 0;
    height: 0.5rem; /* Height of the bridge */
    background-color: transparent; /* Make it invisible */
  }
</style>
