      {/* Column for button and form */}
      <div class="bg-white/90 p-8 rounded-lg shadow-md border-2 border-transparent hover:border-indigo-500 hover:bg-gradient-to-br hover:from-pink-400 hover:via-purple-500 hover:to-indigo-600 transition-all duration-300 group">
        <h3 class="text-2xl font-semibold text-gray-800 group-hover:text-white mb-6 transition-colors duration-300">Pošaljite nam poruku</h3>
        <form name="contact" method="POST" data-netlify="true" data-netlify-honeypot="bot-field">
          <input type="hidden" name="form-name" value="contact" />
          <p class="hidden">
            <label>Don’t fill this out if you’re human: <input name="bot-field" /></label>
          </p>
          
          {/* Polja sa solid pozadinom */}
          <div class="mb-4">
            <label for="name" class="block text-gray-700 group-hover:text-white font-medium mb-2 transition-colors duration-300">Ime</label>
            <input type="text" id="name" name="name" required autocomplete="name" 
                   class="w-full px-4 py-2 border border-gray-300 rounded-md bg-white group-hover:bg-white/80 focus:outline-none focus:ring-2 focus:ring-primary" />
          </div>
          
          <div class="mb-4">
            <label for="email" class="block text-gray-700 group-hover:text-white font-medium mb-2 transition-colors duration-300">Email</label>
            <input type="email" id="email" name="email" required autocomplete="email" 
                   class="w-full px-4 py-2 border border-gray-300 rounded-md bg-white group-hover:bg-white/80 focus:outline-none focus:ring-2 focus:ring-primary" />
          </div>
          
          <div class="mb-6">
            <label for="message" class="block text-gray-700 group-hover:text-white font-medium mb-2 transition-colors duration-300">Poruka</label>
            <textarea id="message" name="message" rows="5" required 
                      class="w-full px-4 py-2 border border-gray-300 rounded-md bg-white group-hover:bg-white/80 focus:outline-none focus:ring-2 focus:ring-primary"></textarea>
          </div>
      
          {/* Kontakt dugme sa boljim kontrastom */}
          <button type="submit" 
                  class="bg-primary text-white px-6 py-3 rounded-md font-semibold hover:opacity-90 transition-all duration-300 group-hover:bg-indigo-700 group-hover:scale-105">
            Pošalji Poruku
          </button>
        </form>
      </div>
      </div>

    </div>
  </div>
</section>

<script is:inline>
  // Script to reveal the contact form
  const revealButton = document.getElementById('reveal-form-button');
  const formWrapper = document.getElementById('contact-form-wrapper');
  const buttonContainer = document.getElementById('reveal-form-button-container'); // Target container now

  if (revealButton && formWrapper && buttonContainer) {
    revealButton.addEventListener('click', () => {
      formWrapper.classList.remove('hidden');
      buttonContainer.classList.add('hidden'); // Hide the button container
      // Optional: Scroll to the form smoothly
      // formWrapper.scrollIntoView({ behavior: 'smooth', block: 'start' });
    });
  }
</script>
